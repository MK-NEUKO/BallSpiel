<Window x:Class="BallSpiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallSpiel"
        mc:Ignorable="d"
        Title="LernMoments BallSpiel" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.513,0.494">
        <Button Content="Start/Stop" Name="StartStopButton" HorizontalAlignment="Left" Margin="60,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.581,0.766" Click="StartStopButton_Click"/>
        <Label Content="0 Clicks" Name="SpielstandLabel" HorizontalAlignment="Left" Margin="64,84,0,0" VerticalAlignment="Top"/>
        <Canvas Margin="180,0,0,0" Name="Spielplatz" Background="LightSlateGray">
            <Ellipse Width="20" Height="20" Name="Ball" Fill="LimeGreen" Canvas.Left="100" Canvas.Top="100" MouseUp="Ball_MouseUp"/>
        </Canvas>

    </Grid>
</Window>
